<div class="container">
    <div class="meta">
        <h2 class="title"><%= __('categories') %></h2>
    </div>
    <div class="divider"></div>
    <div class="categories">
        <%
            var categories = ''
            site.categories.forEach((category) => {
                categories += `<a href="${config.root}${category.path}" class="category">${category.name}<span style="float:right">*${category.posts.length}</span></a>`
            })
        %>
        <%- categories %>
    </div>
</div>